<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_track"
    app:startDestination="@id/trackListFragment">

    <fragment
        android:id="@+id/trackListFragment"
        android:name="com.example.tracklist.ui.list.TrackListFragment"
        android:label="TrackListFragment" >
        <action
            android:id="@+id/action_trackListFragment_to_trackDetailsFragment"
            app:destination="@id/trackDetailsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/trackDetailsFragment"
        android:name="com.example.tracklist.ui.details.TrackDetailsFragment"
        android:label="TrackDetailsFragment" />
</navigation>